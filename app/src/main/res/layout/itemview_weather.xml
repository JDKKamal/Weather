<?xml version="1.0" encoding="utf-8"?><!-- ListView Custom Views -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/small"
        android:orientation="vertical">


                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/extraTiny"
                    app:cardElevation="@dimen/extraTiny"
                    app:cardBackgroundColor="@color/colorWhite"
                    app:cardUseCompatPadding="true">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <android.support.v7.widget.AppCompatImageView
                            android:id="@+id/appivProductImage"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/big"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:padding="@dimen/extraTiny"
                            android:scaleType="fitXY" />

                        <ProgressBar
                            android:id="@+id/progressBar"
                            android:layout_width="@dimen/big"
                            android:layout_height="@dimen/big"
                            android:visibility="gone"
                            android:layout_centerInParent="true" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <android.support.v7.widget.AppCompatTextView
                                android:id="@+id/apptvProductName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:padding="@dimen/medium"
                                android:text="Category Name"
                                android:textAlignment="center"
                                android:textColor="@color/colorBackground"
                                android:textSize="@dimen/medium" />
                        </LinearLayout>

                    </RelativeLayout>
                </android.support.v7.widget.CardView>



    </LinearLayout>
</RelativeLayout>